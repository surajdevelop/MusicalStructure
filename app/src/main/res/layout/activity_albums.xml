    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlbumsActivity">


    <TextView
        android:id="@+id/purpose"
        style="@style/CategoryStyle"
        android:background="@color/buleis"
        android:text="@string/category_purpose" />

    <TextView
        android:id="@+id/views"
        style="@style/CategoryStyle"
        android:background="#8E24AA"
        android:text="Views" />

    <TextView
        android:id="@+id/x"
        style="@style/CategoryStyle"
        android:background="#AB47BC"
        android:text="X" />
</LinearLayout>
